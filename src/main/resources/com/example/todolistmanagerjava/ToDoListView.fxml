<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.todolistmanagerjava.ToDoListController" spacing="10" padding="15">
    <!-- TableView for displaying tasks -->
    <TableView fx:id="taskTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150" />
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
            <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100" />
            <TableColumn fx:id="priorityColumn" text="Priority" prefWidth="100" />
        </columns>
    </TableView>

    <!-- Search bar -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Search:" />
        <TextField fx:id="searchField" promptText="Search by title or description" />
    </HBox>

    <!-- Action buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addTaskButton" text="Add Task" />
        <Button fx:id="editTaskButton" text="Edit Task" />
        <Button fx:id="deleteTaskButton" text="Delete Task" />
        <Button fx:id="saveTaskButton" text="Save Tasks" />
    </HBox>
</VBox>
